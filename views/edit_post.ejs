<body>

  <!-- The sidebar -->
  <div class="sidebar">
    <a href="#" class="disabled"><i class="fa fa-fw fa-plus"></i>Add Post</a>
    <a href="#"><i class="fa fa-fw fa-plus"></i>Announcements</a>
  </div>
  <main class="main">
    <h1 class="m-2 pt-3">Post Blog</h1>

    <form method="post" enctype='multipart/form-data'>
      <div class="form-group m-2">
        <div>Title (Alphanumeric)</div>
        <input type="text" name="title" class="form-control w-25" id="title" placeholder="Post Title" pattern="[A-Za-z0-9_ ]+" required>
      </div>

      <div class="form-group m-2" id="authors">
        <div>Author(s)</div>
        <input type="text" name="authors[]" class="form-control d-inline w-25 my-2" id="input_author" placeholder="Siew Hean" required>
        <button type="button" class="btn btn-outline-primary d-inline ms-2" onclick="
        $('#add_author').clone().appendTo('#authors').removeAttr('id').attr('required', true).removeClass('d-none')">
          <i class="bi bi-plus-lg"></i>
        </button>

        <div class="d-flex flex-row d-none my-2" id="add_author">
          <input type="text" name="authors[]" class="form-control w-25" placeholder="Hong Wei">
          <button onclick="$(this).parent().remove()" type="button" id="remove_author" class="btn btn-primary d-inline ms-2" btn-lg btn-block">
            <i class="bi bi-x-lg"></i>
          </button>
        </div>
      </div>

      <div class="form-group m-2">
        <div>Category</div>
        <input type="text" name="category" class="form-control w-25" id="category" placeholder="Post Category" required>
      </div>

      <div class="form-group m-2">
        <div>Image</div>
        <input type="file" name="picture" accept="image/*" class="form-control-file" id="picture">
      </div>

      <br>

      <div class="form-group m-2">
        <div>Content</div>
        <textarea name="content" class="form-control w-50" id="content" rows="3" required></textarea>
      </div>
      <br>
      <button type="submit" class="btn btn-primary m-2">Submit Post</button>
    </form>




  </main>


